# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                             controllers.Application.index

# Authentication
GET         /auth/login                                   controllers.Authentication.login

GET         /projects/:project/issues/:issueNumber/create controllers.TimeEntryController.createForm(project, issueNumber: Int)
POST        /projects/:project/issues/:issueNumber        controllers.TimeEntryController.create(project, issueNumber: Int)
GET         /projects/:project/issues/:issueNumber        controllers.TimeEntryController.loggedTimeForIssue(project: String, issueNumber: Int)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                 controllers.Assets.at(path="/public", file)
